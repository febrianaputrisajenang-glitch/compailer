{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": ".next",
  "routes": [
    {
      "src": "/api/groq/.+",
      "dest": "/api/groq/route.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/",
      "methods": ["GET"]
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key"
  },
  "regions": ["sfo1"],
  "framework": {
    "version": "15.5.2"
  }
}